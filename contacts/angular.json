{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "contacts": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "ngx-build-plus:browser",
          "options": {
            "outputPath": "dist/contacts/browser",
            "index": "src/static/index.html",
            "main": "src/main.browser.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsc/tsconfig.app.json",
            "aot": true,
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets/",
                "output": "/assets/"
              },

              {
                "glob": "**/*",
                "input": "src/static/",
                "output": "/"
              }
            ],
            "styles": ["src/styles/styles.scss", "src/styles/mat-theme.scss"]
          },
          "configurations": {
            "prod": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ],
              "serviceWorker": true,
              "ngswConfigPath": "conf/ngsw-config.json"
            },
            "staging": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ],
              "serviceWorker": true,
              "ngswConfigPath": "conf/ngsw-config.json"
            },
            "dev": {
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "vendorChunk": false
            }
          }
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "options": {
            "browserTarget": "contacts:build"
          },
          "configurations": {
            "prod": {
              "browserTarget": "contacts:build:prod"
            },
            "staging": {
              "browserTarget": "contacts:build:staging"
            },
            "dev": {
              "browserTarget": "contacts:build:dev"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "contacts:build"
          }
        },
        "test": {
          "builder": "ngx-build-plus:karma",
          "options": {
            "main": "src/tests.unit.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsc/tsconfig.spec.json",
            "karmaConfig": "tests/unit.conf.js",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets/",
                "output": "/assets/"
              },

              {
                "glob": "**/*",
                "input": "src/static/",
                "output": "/"
              }
            ],
            "styles": ["src/styles/styles.scss", "src/styles/mat-theme.scss"]
          }
        },
        "integration": {
          "builder": "ngx-build-plus:karma",
          "options": {
            "main": "src/tests.integration.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsc/tsconfig.spec.json",
            "karmaConfig": "tests/integration.conf.js",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets/",
                "output": "/assets/"
              },

              {
                "glob": "**/*",
                "input": "src/static/",
                "output": "/"
              }
            ],
            "styles": ["src/styles/styles.scss", "src/styles/mat-theme.scss"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "eslintConfig": ".eslintrc.json",
            "lintFilePatterns": ["**/*.ts"]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "tests/e2e.conf.js",
            "devServerTarget": "contacts:serve"
          },
          "configurations": {
            "prod": {
              "devServerTarget": "contacts:serve:prod"
            },
            "staging": {
              "devServerTarget": "contacts:serve:staging"
            },
            "dev": {
              "devServerTarget": "contacts:serve:dev"
            }
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/contacts/server",
            "main": "server.ts",
            "tsConfig": "tsc/tsconfig.server.json"
          },
          "configurations": {
            "prod": {
              "outputHashing": "media",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "sourceMap": false,
              "optimization": true
            },
            "staging": {
              "outputHashing": "media",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "sourceMap": false,
              "optimization": true
            },
            "dev": {
              "outputHashing": "media",
              "sourceMap": false
            }
          }
        },
        "serve-ssr": {
          "builder": "@nguniversal/builders:ssr-dev-server",
          "options": {
            "browserTarget": "contacts:build",
            "serverTarget": "contacts:server"
          },
          "configurations": {
            "prod": {
              "browserTarget": "contacts:build:prod",
              "serverTarget": "contacts:server:prod"
            },
            "staging": {
              "browserTarget": "contacts:build:staging",
              "serverTarget": "contacts:server:staging"
            },
            "dev": {
              "browserTarget": "contacts:build:dev",
              "serverTarget": "contacts:server:dev"
            }
          }
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {
            "browserTarget": "contacts:build:prod",
            "serverTarget": "contacts:server:prod",
            "routes": ["/"]
          }
        }
      }
    }
  },
  "defaultProject": "contacts"
}
